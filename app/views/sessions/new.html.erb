<% if current_user %>
  <%= render 'charts/index' %>
<% else %>
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <h1>Sign In</h1>
        <p>
          <%= link_to "Create an account", new_identity_path %> or login below.
        </p>

        <%= form_tag "/auth/identity/callback", class: "form-horizontal" do %>
          <div class="form-group">
            <div class="field">
              <%= label_tag :auth_key, "Email" %><br>
              <%= text_field_tag :auth_key, "", class: "form-control" %>
            </div>
            <div class="field">
              <%= label_tag :password %><br>
              <%= password_field_tag :password, "", class: "form-control" %>
            </div>
            <div class="actions"><%= submit_tag "Login", class: "form-control btn-primary" %></div>
          </div>
      </div>
    </div>
  </div>
  <% end %>
<% end %>