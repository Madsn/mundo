<% content_for :title, "Best Demo site for highcharts gem" %>

<div class="container">
  <div class="row">
    <div class="span3 bs-docs-sidebar">
      <ul>
        <%= form_tag({:action => "line_labels", :controller => "charts"}, remote: true) do -%>
          Show the last         
          <%= number_field_tag('count', 20) %>
          workouts
          <br>
          <%= submit_tag 'show/update chart', remote: true %>
        <% end -%>
      </ul>
    </div>

    <!-- demo charts master view -->
    <div class="span9">

      <section id="line-labels">
      </section>
    </div>
  </div>
</div>